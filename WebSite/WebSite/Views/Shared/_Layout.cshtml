<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/bundles/magnific-popup-css")
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/magnific-popup-js")

